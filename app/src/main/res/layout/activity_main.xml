<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:clipToPadding="false">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Mis datos y pólizas"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorTextPrimary"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Botones superiores -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:text="Perfil y contacto"
                    android:textColor="@color/colorBackground"
                    app:backgroundTint="@color/colorPrimary"
                    app:cornerRadius="8dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.button.MaterialButton
                    android:text="Mis pólizas"
                    android:textColor="@color/colorTextPrimary"
                    app:backgroundTint="@color/colorDisabled"
                    app:cornerRadius="8dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- PIN -->
            <TextView
                android:text="PIN de seguridad"
                android:textStyle="bold"
                android:textColor="@color/colorTextPrimary"
                android:textSize="20sp"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:boxStrokeColor="@color/colorPrimary"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxBackgroundMode="outline"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnModificarPin"
                android:layout_marginTop="12dp"
                android:text="Modificar PIN de seguridad"
                android:textColor="@color/colorPrimary"
                app:backgroundTint="@android:color/transparent"
                app:strokeColor="@color/colorPrimary"
                app:cornerRadius="8dp"
                app:strokeWidth="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- Datos personales -->
            <TextView
                android:text="Datos personales y de contacto"
                android:textStyle="bold"
                android:textColor="@color/colorTextPrimary"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Nombre -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutNombre"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/colorBorder">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editNombre"
                    android:hint="Nombre y apellidos"
                    android:inputType="textPersonName"
                    android:textColor="@color/colorTextPrimary"
                    android:textColorHint="@color/colorHint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- DNI -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutDni"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/colorBorder">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editDni"
                    android:hint="DNI / NIF / Pasaporte"
                    android:inputType="text"
                    android:textColor="@color/colorTextPrimary"
                    android:textColorHint="@color/colorHint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:src="@drawable/ic_edit"
                    app:tint="@color/colorPrimary"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="12dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </FrameLayout>

            <!-- Fecha -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutFecha"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/colorBorder">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editFecha"
                    android:hint="Fecha de nacimiento"
                    android:inputType="date"
                    android:textColor="@color/colorTextPrimary"
                    android:textColorHint="@color/colorHint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:src="@drawable/ic_edit"
                    app:tint="@color/colorPrimary"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="12dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </FrameLayout>

            <!-- Email -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutEmail"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/colorBorder">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editEmail"
                    android:hint="Email principal"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorTextPrimary"
                    android:textColorHint="@color/colorHint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:src="@drawable/ic_edit"
                    app:tint="@color/colorPrimary"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="12dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </FrameLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditarCorreo"
                android:layout_marginTop="8dp"
                android:text="+ Añadir/Editar correo"
                android:textColor="@color/colorPrimary"
                app:backgroundTint="@android:color/transparent"
                app:strokeColor="@color/colorPrimary"
                app:cornerRadius="8dp"
                app:strokeWidth="1dp"
                android:layout_gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- Teléfono -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutTelefono"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/colorBorder">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTelefono"
                    android:hint="Teléfono móvil"
                    android:inputType="phone"
                    android:textColor="@color/colorTextPrimary"
                    android:textColorHint="@color/colorHint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:src="@drawable/ic_edit"
                    app:tint="@color/colorPrimary"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="12dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <!-- FOOTER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorBackground"
        android:weightSum="5">

        <LinearLayout
            android:id="@+id/btnInformes"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_informes"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="@color/colorTextPrimary" />

            <TextView
                android:text="Informes y recetas"
                android:textSize="11sp"
                android:textColor="@color/colorTextPrimary"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnTarjeta"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_tarjeta"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="@color/colorTextPrimary" />

            <TextView
                android:text="Tarjeta\nDigital"
                android:textSize="11sp"
                android:textColor="@color/colorTextPrimary"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnUrgencias"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_urgencias"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="@color/colorTextPrimary" />

            <TextView
                android:text="Urgencias"
                android:textSize="11sp"
                android:textColor="@color/colorTextPrimary"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnProgramas"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_programas"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="@color/colorTextPrimary" />

            <TextView
                android:text="Programas de salud"
                android:textSize="11sp"
                android:textColor="@color/colorTextPrimary"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnMas"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_mas"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="@color/colorTextPrimary" />

            <TextView
                android:text="Más"
                android:textSize="11sp"
                android:textColor="@color/colorTextPrimary"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>